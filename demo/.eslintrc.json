{
    "root": true,
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "G": true,
        "Vue": true,
        "Promise": true
    },
    "plugins": ["html"],
    "rules": {
        "indent": ["off", 4],
        "no-console": "off",
        "eqeqeq": "off",
        "no-unused-vars": "off",
        "no-extra-semi": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-redeclare": "off",
        "no-useless-escape": "off",
        "no-empty": "off",
        "no-unreachable": "warn"
    }
}